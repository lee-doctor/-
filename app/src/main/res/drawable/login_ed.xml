<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--背景色-->
    <solid android:color="@android:color/white" />
    <padding
        android:left="10dp"
        android:right="4dp"
        android:bottom="4dp"
        android:top="4dp"
        />
    <!--边框线-->
    <stroke
        android:width="4dp"
        android:color="#FF9D00" />
    <!--圆角-->
    <corners android:radius="20dp" />
</shape>